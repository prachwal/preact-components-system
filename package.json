{
  "name": "preact-components-system",
  "version": "1.0.1",
  "description": "A system of reusable Preact components",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "files": [
    "dist"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/prachwal/preact-components-system.git"
  },
  "author": "prachwal",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.lib.json && npm run build:css && vite build",
    "build:app": "vite build --config vite.config.app.ts",
    "build:analyze": "ANALYZE=true npm run build",
    "build:css": "sass src/styles/index.scss dist/index.css --style=compressed",
    "type-check": "tsc --noEmit",
    "test": "NO_COLOR=1 vitest run",
    "test:ui": "vitest --ui",
    "test:run": "NO_COLOR=1 vitest run --reporter=verbose",
    "test:coverage": "NO_COLOR=1 vitest run --coverage --reporter=verbose",
    "test:watch": "NO_COLOR=1 vitest --watch --reporter=verbose",
    "test:related": "NO_COLOR=1 vitest --related --reporter=verbose",
    "test:junit": "NO_COLOR=1 vitest run --reporter=junit --outputFile=test-results/junit.xml",
    "test:unit": "NO_COLOR=1 vitest run --coverage --reporter=verbose",
    "test:accessibility": "NO_COLOR=1 vitest run --grep='accessibility' --reporter=verbose",
    "test:integration": "NO_COLOR=1 vitest run --grep='integration' --reporter=verbose",
    "test:performance": "NO_COLOR=1 vitest run --grep='performance' --reporter=verbose",
    "docs": "typedoc",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build:storybook": "storybook build",
    "merge-ts": "node scripts/merge-files.js",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx --report-unused-disable-directives",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-preact": "^0.555.0",
    "preact": "^10.27.2"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.2",
    "@microsoft/tsdoc-config": "^0.17.1",
    "@preact/preset-vite": "^2.10.2",
    "@storybook/addon-docs": "^10.0.2",
    "@storybook/preact-vite": "^10.0.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.1.0",
    "prettier": "^3.7.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "sass": "^1.93.3",
    "storybook": "^10.0.2",
    "typedoc": "^0.28.14",
    "typescript": "~5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.6"
  }
}
